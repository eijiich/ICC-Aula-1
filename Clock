#include <stdio.h>
#include <stdlib.h>
#include <windows.h>

int main()
{
    int h,m,s;
    h=m=s=0;

    printf("\n\n\n\n\n\n\n\n");
    printf("Inicio do Loop \n\n\n");

loop:;
    {
    printf("Hora: %2d:%2d:%2d", h, m, s);
        s++;
    if(s==60){
        m++;
        s=0;
    }
    if(m==60){
        h++;
        m=0;
    }
    if(h==24){
        h=0;

    Sleep(1000);
    }
    goto loop;
    return 0;
}
