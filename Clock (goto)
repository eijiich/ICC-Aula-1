#include <stdio.h>
#include <stdlib.h>
#include <windows.h>

int main()
{
    int h,m,s;
    h=m=s=0;

    printf("\n\n\n");
    printf("Inicio do Loop \n\n\n");

loop:;
    printf("\r Hora: %2dh:%2dm:%2ds", h, m, s);
        s++;
    if(s==60){
        m++;
        s=0;
    }
    if(m==60){
        h++;
        m=0;
    }
    if(h==24){
        h=0;
    }
    Sleep(1000);
    goto loop;

    return 0;
}
